
.ui.modal.login_modal
  .header Login To Your Account
  form(action="/login/")#login_form.ui.medium.form.error
    .ui.stacked.segment
      .ui.error.message
      .required.field
        .ui.left.icon.input
          i.envelope.icon
          input(type="email", name="email" placeholder="E-mail").email_input
      .required.field
        .ui.left.icon.input
          i.lock.icon
          input(type="password", name="password" placeholder="Password").pass_input
      .ui.grid
        .right.floated.column
          button(type="submit").ui.right.floated.large.green.button.submit_login Submit    